<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Alessandro Brawerman"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnConverter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="48dp"
            android:height="40dp"
            android:backgroundTint="#d4da7b"
            android:contextClickable="false"
            android:firstBaselineToTopHeight="0dp"
            android:minHeight="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="Nova conversão"
            android:textAlignment="center"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="18dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#ADB165"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/extratoReais"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:height="160dp"
            android:backgroundTint="#d4da7b"
            android:contextClickable="false"
            android:firstBaselineToTopHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="R$100.000,00"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="28dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:iconGravity="end"
            app:iconSize="50dp"
            app:iconTint="#3a462e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:strokeColor="#ADB165"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/extratoDolares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:height="160dp"
            android:backgroundTint="#d4da7b"
            android:contextClickable="false"
            android:firstBaselineToTopHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="U$50.000,00"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="28dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:iconGravity="end"
            app:iconSize="50dp"
            app:iconTint="#3a462e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extratoReais"
            app:strokeColor="#ADB165"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/extratoBitcoin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:height="160dp"
            android:backgroundTint="#d4da7b"
            android:contextClickable="false"
            android:firstBaselineToTopHeight="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="0,5000 BTC"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="28dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:iconGravity="end"
            app:iconSize="50dp"
            app:iconTint="#3a462e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/extratoDolares"
            app:strokeColor="#ADB165"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nível Ouro"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>